body{
	margin: 0px;
	background-color:#f2dd72;
/*	background-image: url(<%= asset_path 'stripe.png' %>);	*/
	font-family: Trebuchet MS, Arial, sans-serif;
	height:100%;
	margin-top:0px;

}
.top{
position:relative;
text-align:right;
width:100%;
margin: auto;
background-color:#eabd40;
height:50px;
z-index:1;
}

.wrapper{
	position:relative;
	width:990px;
	margin: 0px auto;
	height:100%;
	top:30px;
}
section{
	
	background-color: #FFFFFF;
	padding:10px;
	position:relative;
	margin-top:320px;
	width:100%;
	min-height:480px;
	border-bottom-left-radius:15px;
	border-bottom-right-radius:15px;
}
img.ornament{
position:absolute;
top:-15px;
left:0px;
}
img.logo{
position:relative;
z-index:2;
margin-top:-40px;
}
ul.nav{
display:block;
list-style:none;
position:relative;
left:320px;
margin-top:-350px;
}
ul.nav li{
min-width:140px;
height:200px;
margin-right:6px;
display:block;
float:left;
border-bottom-left-radius:20px;
border-bottom-right-radius:20px;
border: 2px dashed #f2dd72;
border-top:none;
}
ul.nav li:hover { 
background-color:#eabd40;
border: 2px dashed #69a798 ;
border-top:none;
}
li.wider{
width:170px;
}
img.nav{
margin: auto;
position:absolute;
bottom:-200px;
margin-left:10px;
}

footer{
background-color: #e2213c;
height:70px;
width:100%;
padding-top:30px;
text-align:center;
position:relative;
bottom:0px;
margin-top:40px;
}

.form{
position:relative;
background-color:#c4d37a;
width:400px;
margin-left:280px;
padding:10px;
margin-top:10px;
border-top-left-radius:10px;
border-top-right-radius:10px;
}
input{
height:20px;
padding:5px;
border:none;
border-radius:5px;
}
input.zarejestruj{
	height:93px;
	width:420px;
	background-image: url(<%= asset_path 'zarejestruj.png' %>);	
	border-radius:5px;
	background-color:transparent;
	border: 0;
	cursor:pointer;
	cursor:hand;
	position:absolute;
	bottom:-90px;
	left:0px;
	
}
