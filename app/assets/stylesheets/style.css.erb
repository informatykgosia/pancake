body{
	margin: 0px;
	background-color:#f2dd72;
/*	background-image: url(<%= asset_path 'stripe.png' %>);	*/
	font-family: Trebuchet MS, Arial, sans-serif;
	height:100%;
	margin-top:0px;
}
.top{
position:absolute;
text-align:right;
width:100%;
margin: auto;
background-color:#eabd40;
height:50px;
z-index:1;
}

.wrapper{
	position:relative;
	width:990px;
	margin: 0px auto;
	height:100%;
	top:30px;
}
section{
	background-color: #FFFFFF;

	padding:10px;
	position:absolute;
	top:360px;
	width:100%;
	border-bottom-left-radius:15px;
	border-bottom-right-radius:15px;
}
img.ornament{
position:absolute;
top:-13px;
left:-1px;
}
img.logo{
position:absolute;
z-index:2;
}
ul.nav{
display:block;
list-style:none;
position:absolute;
left:320px;
top:0px;
}
ul.nav li{
min-width:140px;
height:200px;
margin-right:6px;
display:block;
float:left;
border-bottom-left-radius:20px;
border-bottom-right-radius:20px;
border: 2px dashed #f2dd72;
border-top:none;
}
ul.nav li:hover { 
background-color:#eabd40;
border: 2px dashed #69a798 ;
border-top:none;
}
li.wider{
width:170px;
}
img.nav{
margin: auto;
position:absolute;
bottom:10px;
margin-left:10px;
}

footer{
background-color: #e2213c;
height:70px;
width:100%;
padding-top:30px;
text-align:center;
position:absolute;
bottom:0px;}
