/*  elementy stałe	*/
body{
  margin: 0px;
  background-color:#f2dd72;
  font-family: Trebuchet MS, Arial, sans-serif;
  height:100%;
  margin-top:0px;
  text-align: justify;
}

.wrapper{
  position:relative;
  margin: 0px auto;
  width:990px;
  height:100%;
  top:30px;
}

section{
  background-color: #FFFFFF;
  padding:10px;
  padding-top:50px;
  position:relative;
  margin-top:320px;
  width:100%;
  min-height:530px;
  border-bottom-left-radius:15px;
  border-bottom-right-radius:15px;
}
/* pasek top */

.top{
  position:relative;
  text-align:right;
  margin: auto;
  width:100%;
  background-color:#eabd40;
  height:50px;
  z-index:1;
}

.greeting{
  width: 300px;
  padding: 3px;
  text-align:right;
  margin-top: 7px;
  float:right;
  color:#964722;
}

/* footer */
footer{
  background-color: #e2213c;
  height:70px;
  color: #7f0000;
  font-size:20px;
  width:100%;
  padding-top:30px;
  text-align:center;
  position:relative;
  bottom:0px;
  margin-top:40px;
}
a.footer{
  color: #f4d3d0;
  font-weight:normal;
  font-size:14px; 
}
.crew1, .crew2{
  float:left;
  text-align:center;
  margin-bottom: 80px;
}
.crew1{
  width: 550px;
}
.crew2{
  width:420px;
  margin-top:-20px;
}
a.footer:active, a.footer:hover {
  color: #7f0000;
}

/* podstawowe linki i nagłówki */
h1{
  text-align:center;
  font-size:16px;
}

a{
  text-decoration:none;
  color:#157272;
  font-weight:800;
}

a:hover, a:active {
  color:#01a8a8;
}

/* header, nawigacja, logo */

img.ornament{
  position:absolute;
  top:-15px;
  left:0px;
}

img.logo{
  position:relative;
  z-index:2;
  margin-top:-40px;
}
ul.nav{
  display:block;
  list-style:none;
  position:relative;
  left:320px;
  width:700px;
  margin-top:-350px;
}
ul.nav li{
  min-width:140px;
  height:200px;
  margin-right:6px;
  display:block;
  float:left;
  border-bottom-left-radius:20px;
  border-bottom-right-radius:20px;
  border: 2px dashed #f2dd72;
  border-top:none;
}
ul.nav li:hover { 
  background-color:#eabd40;
  border: 2px dashed #69a798 ;
  border-top:none;
}
li.wider{
  width:170px;
}
img.nav{
  margin: auto;
  position:absolute;
  bottom:-200px;
  margin-left:10px;
}

/* elemenety w section */

img.localisation{
  position:absolute;
  right:20px;
  top:-20px;
}

img.button{
  float:right;
  margin-top:80px;
  margin-right: -305px;
}

img.buttontop{
  margin-top:-2px;
  float: right;
}


li.error{
  color:#c4273c;
  list-style:none;

}
.notice{
  background-color:#c4d37a;
  font-size:20px;
  font-family:georgia, serif;
  font-style: italic;
  color: #275109;
  border: 3px solid #275109;
  padding: 5px 10px;
  width: 300px;
  margin:auto;
  margin-bottom:20px;
  text-align:center;
  border-radius:10px;
 }

 /* logowanie i rejestracja */

 input.zarejestruj{
   height:93px;
   width:420px;
   background-image: url(<%= asset_path 'zarejestruj.png' %>);	
   background-color:transparent;
   border-radius:5px;
   border: 0;
   cursor:pointer;
   cursor:hand;
   position:absolute;
   bottom:-90px;
   left:0px;

}
input.login, input.login_small{
  cursor:pointer;
  cursor:hand;
  background-color:transparent;
}
input.login{
  background-image: url(<%= asset_path 'buttonloginbigger.png' %>);
  width:328px;
  height:86px;
}
input.login_small{
  background-image: url(<%= asset_path 'buttonlogin.png' %>);
  background-position: center bottom;
  width:193px;
  height:46px;
  display:inline;
  position:relative;
  margin-top:3px;
}

.form_rejestr, .form_new_local, .form_login{
  position:relative;
  padding:10px;
  margin-top:10px;
  border-top-left-radius:10px;
  border-top-right-radius:10px;
}
.form_login_inline{
  display:inline-block;
  margin-top:10px;
}

.form_rejestr{
  background-color:#c4d37a;
  width:400px;
  margin-left:280px;
}
.form_login{
  width: 350px;
  margin:auto;
}
.field_login{
  border:3px solid #69a798;
  background-color: #a2dbcf;
  width:300px;
}
.field_login_inline{
  width:150px;
  height:15px;
}
/* formularze ogolnie */
.fieldred, .areared, .field, .area{
  border:3px solid #c4d27a;
  width:400px;
  background-color:#e3edad;

}

.fieldred, .areared{
  width: 400px;
  border:3px dashed #94a835;
  margin-top:-15px;
}
.area{
  height:150px;
  border-radius:10px;
  padding:5px;
}
.transparent{
  background-color:transparent;
  width:450px;
  border: 1px solid #000000;
  margin-left:23px;
  border-radius:10px;

  margin-bottom:-20px;
}

input:focus, input:hover, textarea:focus, textarea:hover{
  background-color:#fff;
}

input{
  height:20px;
  padding:5px;
  border:none;
  border-radius:5px;
}


input.edit{
  background-image: url(<%= asset_path 'buttonedit.png' %>);
  margin-left:170px;
  width:160px;
  height:80px;
  background-color:transparent;
  cursor:pointer;
  cursor:hand;
}
/* szukanie */

.field_search{
  border: 3px solid #7fcbe3;
  margin-top:20px;
  margin-left:60px;
  width:100px;
}
input.button_search{
  background-color:transparent;
  background-image: url(<%= asset_path 'buttonsearch.png' %>);
  float:right;
  width:125px;
  height:80px;
  cursor:pointer;
  cursor:hand;
}
.search{
  width:310px;
  float:right;
}

/* komentarze */

.comments{
  width:400px;
  margin:auto;
}
.comment{
  width: 350px;
  min-height:20px;
  padding:10px;
  background-color:#e0f1df;
  margin-bottom:10px;
  border-radius:10px;
}
.date{
  font-size:12px;
  margin-left:10px;
}
.author{
  width: 350px;
  padding-right:20px;
  text-align:right;
  font-size:14px;
  margin-top:-10px;
}
input.add_comment{

  background-image: url(<%= asset_path 'buttoncomment.png' %>);
  width:175px;
  height:80px;
  background-color:transparent;
  margin-left:250px;
  cursor:pointer;
  cursor:hand;
}
/* lokale */

.lokal{
  margin-bottom:20px;
  margin-left:150px;
  display:block;
  width:500px;
  height:190px;
  padding:20px 5px;
  border: 2px solid #f2dd72;
  border-radius: 10px;
}
.form_new_local{
  position:relative;
  width:500px;
  margin: auto;
}

input.add_local{
  background-image: url(<%= asset_path 'dodajprzycisk.png' %>);	
  width:420px;
  height:80px;
  cursor:pointer;
  cursor:hand;
  border:0;
  background-color:transparent;
}
.lokal_info{
  display:inline-block;
  float:left;
  margin-left:20px;
}
.lokal_opis{
  width: 300px;
  margin-top:10px;
}
.lokal_opis2{
  width: 250px;
}
img.lokal_min{
  float:left;
}
.lokal_show{
  width: 300px;
  float:left;
  margin-right: 20px;
  margin-left:10px;
}
.lokal_nazwa{
  font-size: 20px;
  color: #ea5b4a;
}

.name{
  font-size: 20px;
  color: #94a835;
}

.pagination{
  padding: 3px;
  margin:auto;
  min-width:50px;
  border-top: 2px solid #f2dd72;
  text-align:center;
  margin-bottom:40px;
}

.pagination a {
  color: #eabd40;

}
.pagination a:hover, .pagination a:active{
  color: #d39117;
}

/* przepisy */

img.recipe{
  float:right;
}
.form_new_pancake{
  width: 400px;
  margin:auto;

}
.ingredient{
  float:left;
  margin: 10px;

}
input.add_recipe{
  background-image: url(<%= asset_path 'buttonrecipe.png' %>);
  width:220px;
  height:80px;
  cursor:pointer;
  cursor:hand;
  background-color:transparent;
  margin-left: 200px;
}
.pancake{
  width: 500px;
  padding: 10px 20px;
  border: 2px dashed #94a835;
  margin-bottom: 30px;
  margin-left: 200px;
}
.ingredients_small, .info{
  color:#94a835;
}


/* dr pancake */

.cloud{
  border: 3px solid #7ecae2;
  min-height:300px;
  width:400px;
  margin-left:141px;
  margin-bottom:-10px;
  padding:10px;
  border-radius:20px;
}
.titles{
  text-align:center;
  font-family: georgia;
}

.titles2{
  font-family:georgia;
  padding:2px 5px;
  border-left:5px solid #84c8df;
  margin-bottom:3px;
  font-size:12px;
  text-align:left;
}
.tableofcontents{
  width:120px;
  min-height:100px;
  margin-top:20px;
}
.undercloud{
  width:400px;
  margin-left:141px;
  margin-top:5px;
  height:80px;
}
.option{
  min-width:40px;
  padding:3px 10px;

  border-radius:5px;
  background-color:#91bdc4;
  float:right;
  margin-left:10px;
  margin-top:15px;
}
img.newtheory{
  float:left;
}

.form_add_theory{
  margin:auto;
  margin-top:-30px;
  width:506px;
  background-image: url(<%= asset_path 'square.png' %>);	
}

input.add_theory{
  background-image: url(<%= asset_path 'buttontheory.png' %>);
  margin-left:190px;
  width:125px;
  height:80px;
  background-color:transparent;
  cursor:pointer;
  cursor:hand;
}

img.drpancake{
  float:right;
  right:20px;
  z-index:1;
  position:absolute;
}
.tableofcontents{
  float:left;
}


