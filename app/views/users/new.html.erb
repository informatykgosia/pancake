<div class=form>
<%= form_for @user do |a| %>
  <!--byki-->
  <p>
    <%= a.label :login, 'login' %><br/>
    <%= a.text_field :login %>
  </p>
  <p>
    <%= a.label :email, 'e-mail' %><br/>
    <%= a.text_field :e_mail %>
  </p>
  <p>
    <%= a.label :password, 'hasło' %><br/>
    <%= a.password_field :password %>
  </p>
  <p>
    <%= a.label :password_confirmation, 'potwierdź hasło' %><br/>
    <%= a.password_field :password_confirmation %>
  </p>
  <p><%= a.submit "", :class => "zarejestruj" %></p>
<% end %>
</div>
