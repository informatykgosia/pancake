<%= image_tag("drpancake.png", :alt =>"Dr Pancake", :class => "drpancake") %> 
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<div class="cloud">

  <div class="title">
    <%= @theory.title %>
  </div>

  <div class="theory">
    <%= @theory.theory %>
  </div>
</div>
<div class="undercloud">
  <div class = "option">
    <%= link_to "usun", :action => "destroy" %>
  </div>
  <div class = "option">
    <%= link_to "edytuj", edit_drpancake_path(@theory) %>
  </div>
</div>

